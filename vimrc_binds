"General
let mapleader = ","                 " , as Leader
vmap <tab> >gv                      " Tab indent
vmap <s-tab> <gv                    " Shift-Tab remove indent
nmap <leader>w :w!<cr>              " Fast save
nmap <leader>q :q!<cr>              " Fast close
imap jj <esc>                       " Easy escaping to normal model
noremap <C-Tab> :tabnext<CR>        " Go to next tab with ctrl-tab
noremap <C-S-Tab> :tabprev<CR>      " Go to previous tab with ctrl-shift-tab
map <C-1> 1gt                       " Tab 1
map <C-2> 2gt                       " Tab 2
map <C-3> 3gt                       " Tab 3
map <C-4> 4gt                       " Tab 4
map <C-5> 5gt                       " Tab 5
map <C-6> 6gt                       " Tab 6
map <C-7> 7gt                       " Tab 7
map <C-8> 8gt                       " Tab 8
map <C-9> 9gt                       " Tab 9

"NERDTreeTabs
map \ :NERDTreeTabsToggle<CR>       " File tree browser toggle

"ctrlp.vim
nmap <C-r> :MyCtrlPTag<cr>          " Open goto symbol
imap <C-r> <esc>:MyCtrlPTag<cr>

"tcomment_vim
map <C-/> :TComment<cr>             " Comment out line
vmap <C-/> :TComment<cr>gv

"vim-multiple-cursors
let g:multi_cursor_use_default_mapping = 0
let g:multi_cursor_next_key = '<C-d>'
let g:multi_cursor_prev_key = '<C-u>'
let g:multi_cursor_skip_key = '<C-k>'
let g:multi_cursor_quit_key = '<Esc>'